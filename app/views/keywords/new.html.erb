<h1>New keyword</h1>

<%= error_messages_for :keyword %>

<% form_for(@keyword) do |f| %>
  <p>
    <b>Entry</b><br />
    <%= f.text_field :entry_id %>
  </p>

  <p>
    <b>Value</b><br />
    <%= f.text_field :value %>
  </p>

  <p>
    <b>Relevance</b><br />
    <%= f.text_field :relevance %>
  </p>

  <p>
    <b>Notes</b><br />
    <%= f.text_area :notes %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', keywords_path %>
